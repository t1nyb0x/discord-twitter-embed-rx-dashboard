---
import Layout from '../../layouts/Layout.astro';

const user = Astro.locals.user;

if (!user) {
  // return Astro.redirect('/');
}
---

<Layout title="ダッシュボード - サーバー一覧">
  <div class="dashboard-container">
    <h1 class="page-title">サーバー一覧</h1>
    <p class="page-description">
      管理権限を持つサーバーの設定を変更できます。
    </p>
    
    <div id="guilds-list-container">
      <div class="loading">
        <div class="spinner"></div>
        <p>サーバー一覧を読み込み中...</p>
      </div>
    </div>
  </div>

  <style is:global>
    /* Dashboard Server List - Enhanced Design v2 */
    .dashboard-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .page-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: #2c3e50;
      background: linear-gradient(135deg, #5865f2 0%, #7289da 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .page-description {
      color: #666;
      font-size: 1.05rem;
      margin-bottom: 2.5rem;
    }

    .loading {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 2rem;
      color: #666;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #5865f2;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 1rem;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .guilds-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.25rem;
      margin-top: 2rem;
    }

    @media (min-width: 768px) {
      .guilds-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .guilds-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (min-width: 1400px) {
      .guilds-grid {
        grid-template-columns: repeat(4, 1fr);
      }
    }

    .guild-card {
      background: white;
      border: 1px solid #e3e5e8;
      border-radius: 16px;
      padding: 1.5rem;
      transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      text-decoration: none;
      color: inherit;
      display: block;
      position: relative;
      overflow: hidden;
    }

    .guild-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #5865f2, #7289da);
      opacity: 0;
      transition: opacity 0.25s ease;
    }

    .guild-card:hover {
      border-color: #5865f2;
      box-shadow: 0 8px 24px rgba(88, 101, 242, 0.15);
      transform: translateY(-4px);
    }

    .guild-card:hover::before {
      opacity: 1;
    }

    .guild-card.not-joined {
      opacity: 0.7;
      cursor: not-allowed;
      background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    }

    .guild-card.not-joined:hover {
      border-color: #e3e5e8;
      box-shadow: none;
      transform: none;
    }

    .guild-card.not-joined::before {
      background: linear-gradient(90deg, #999, #bbb);
    }

    .guild-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .guild-icon {
      width: 56px;
      height: 56px;
      border-radius: 16px;
      background: linear-gradient(135deg, #5865f2 0%, #7289da 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: 700;
      color: white;
      flex-shrink: 0;
      box-shadow: 0 4px 12px rgba(88, 101, 242, 0.2);
    }

    .guild-icon img {
      width: 100%;
      height: 100%;
      border-radius: 16px;
      object-fit: cover;
    }

    .guild-info {
      flex: 1;
      min-width: 0;
    }

    .guild-name {
      font-size: 1.15rem;
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 0.4rem;
      word-break: break-word;
      line-height: 1.3;
    }

    .guild-status {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.85rem;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.35rem 0.75rem;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.8rem;
      letter-spacing: 0.3px;
    }

    .status-badge.joined {
      background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
      color: #155724;
      box-shadow: 0 2px 4px rgba(21, 87, 36, 0.1);
    }

    .status-badge.not-joined {
      background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
      color: #721c24;
      box-shadow: 0 2px 4px rgba(114, 28, 36, 0.1);
    }

    .status-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.6; }
    }

    .status-dot.joined {
      background: #28a745;
      box-shadow: 0 0 0 2px rgba(40, 167, 69, 0.2);
    }

    .status-dot.not-joined {
      background: #dc3545;
      box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.2);
      animation: none;
    }

    .error-message {
      background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
      border: 1px solid #f5c6cb;
      border-radius: 12px;
      padding: 2rem;
      color: #721c24;
      text-align: center;
    }

    .error-message h3 {
      margin-bottom: 0.5rem;
      font-size: 1.25rem;
    }

    .retry-button {
      margin-top: 1rem;
      padding: 0.65rem 1.75rem;
      background: linear-gradient(135deg, #5865f2 0%, #7289da 100%);
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      transition: all 0.25s ease;
      box-shadow: 0 4px 12px rgba(88, 101, 242, 0.3);
    }

    .retry-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(88, 101, 242, 0.4);
    }

    .retry-button:active {
      transform: translateY(0);
    }

    .no-guilds {
      text-align: center;
      padding: 4rem 2rem;
      background: white;
      border-radius: 16px;
      border: 2px dashed #e0e0e0;
    }

    .no-guilds h3 {
      margin-bottom: 0.75rem;
      color: #2c3e50;
      font-size: 1.5rem;
    }

    .no-guilds p {
      color: #666;
      font-size: 1.05rem;
    }
  </style>

  <script>
    interface Guild {
      id: string;
      name: string;
      icon: string | null;
      botJoined: boolean;
    }

    async function loadGuilds() {
      const container = document.getElementById('guilds-list-container');
      if (!container) return;

      try {
        const response = await fetch('/api/guilds');
        
        if (!response.ok) {
          if (response.status === 401) {
            // セッション期限切れ - リダイレクト
            window.location.href = '/auth/session-expired?message=' + encodeURIComponent('セッションの有効期限が切れました。再度ログインしてください。');
            return;
          }
          if (response.status === 429) {
            const error = await response.json();
            const retryAfter = response.headers.get('Retry-After');
            showError('レート制限に達しました', `リクエストが多すぎます。${retryAfter ? `${retryAfter}秒後に` : 'しばらくしてから'}再度お試しください。`);
            return;
          }
          throw new Error('Failed to fetch guilds');
        }

        const data = await response.json();
        const guilds: Guild[] = data.data?.guilds || data.guilds || [];

        if (guilds.length === 0) {
          container.innerHTML = `
            <div class="no-guilds">
              <h3>管理可能なサーバーがありません</h3>
              <p>サーバーの管理権限が必要です。</p>
            </div>
          `;
          return;
        }

        const guildsGrid = document.createElement('div');
        guildsGrid.className = 'guilds-grid';

        guilds.forEach(guild => {
          const card = createGuildCard(guild);
          guildsGrid.appendChild(card);
        });

        container.innerHTML = '';
        container.appendChild(guildsGrid);
      } catch (err) {
        // Client-side error logging for browser debugging
        console.error('Failed to load guilds:', err);
        showError('サーバー一覧の取得に失敗しました', 'もう一度お試しください。');
      }
    }

    function createGuildCard(guild: Guild): HTMLElement {
      const card = document.createElement('a');
      card.className = `guild-card ${!guild.botJoined ? 'not-joined' : ''}`;
      
      if (guild.botJoined) {
        card.href = `/dashboard/guilds/${guild.id}`;
      } else {
        card.onclick = (e) => {
          e.preventDefault();
          alert('Bot がこのサーバーに参加していません。先に Bot を招待してください。');
        };
      }

      const iconUrl = guild.icon 
        ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png`
        : null;

      const firstLetter = guild.name.charAt(0).toUpperCase();

      card.innerHTML = `
        <div class="guild-header">
          <div class="guild-icon">
            ${iconUrl ? `<img src="${iconUrl}" alt="${guild.name}">` : firstLetter}
          </div>
          <div class="guild-info">
            <div class="guild-name">${escapeHtml(guild.name)}</div>
            <div class="guild-status">
              <span class="status-badge ${guild.botJoined ? 'joined' : 'not-joined'}">
                <span class="status-dot ${guild.botJoined ? 'joined' : 'not-joined'}"></span>
                ${guild.botJoined ? 'Bot 参加済み' : 'Bot 未参加'}
              </span>
            </div>
          </div>
        </div>
      `;

      return card;
    }

    function showError(title: string, message: string, showReload: boolean = false) {
      const container = document.getElementById('guilds-list-container');
      if (!container) return;

      container.innerHTML = `
        <div class="error-message">
          <h3>${escapeHtml(title)}</h3>
          <p>${escapeHtml(message)}</p>
          ${showReload ? '<button class="retry-button" onclick="window.location.href=\'/auth/login\'">再ログイン</button>' : '<button class="retry-button" onclick="location.reload()">再試行</button>'}
        </div>
      `;
    }

    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // ページ読み込み時に実行
    loadGuilds();
  </script>
</Layout>
